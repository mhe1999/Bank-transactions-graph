<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<SpinnerOption>:
    # size_hint: None, None
    # size: 20, 20
    spacing: 10
    background_color: (.06,.60,.60,1)
    background_normal: ''


<AdminWindow>:
    file_trigger: file_trigger.__self__
    file_dropdown: file_dropdown.__self__



    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            id: file_trigger
            text: 'File'
            on_release: file_dropdown.open(self)
            size_hint_x: .1
            # background_color: (.06,.47,.47,1)
            # background_normal: ''
            height: 30

            Widget:
                on_parent: file_dropdown.dismiss()

                DropDown:
                    id: file_dropdown
                    Button:
                        id:close
                        text: 'quit'
                        size_hint_y: None
                        height: 30
        Label:
            size_hint_x: .09
        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint_x: .81

    BoxLayout:
        id: content_nav
        BoxLayout:
            id: nav_tabs
            orientation: 'vertical'
            size_hint_x: .2
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06,.40,.40,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            ToggleButton:
                id:customer_toggle
                size_hint_y: .1
                text: 'customers INFO'
                state: 'down'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            ToggleButton:
                id:graph_toggle
                size_hint_y: .1
                text: 'transaction path graph'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: CRUD_toggle
                size_hint_y: .1
                text: 'insert or delete data'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
                on_release: root.ids.voucherID.focus = True


            Label:
                id: sp
                size_hint_y: .7

        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20,10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_customerINFO
                    name: 'scrn_customerINFO'
                    BoxLayout:
                        # spacing: 20
                        orientation: 'vertical'
                        id: Bscrn_customerINFO
                        Spinner:
                            id: whatever
                            text: "Choose a table"
                            bold: True                 #default value showed
                            values: ["Customer table","transactions","Deposits", "Deposits type", "Deposits status", "Branchs"]
                            size_hint_y: None
                            height: 30
                            background_color: (.06,.47,.47,1)
                            background_normal: ''
                            on_text: root.on_spinner_select(self.text)
                            size_hint_x: .2
                            pos_hint: {'center_x': .5}
                        Label:
                            color: (.06,.47,.47,1)
                            text: 'choose which table you want from the drop table'
                            readonly: True
                            size_hint_y: None
                            height: 30
                        Label:

                Screen:
                    id: scrn_graph
                    name: 'scrn_graph'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        TextInput:
                            font_size: 20
                            text: 'in here, you can enter a specific transaction to find the path which the money invloved in this transaction, has gone throgh, from the begining to the end.\n note that this path stop where the money goes out of the bank\n'
                            readonly: True
                            background_color: (.97,.97,.97,1)
                            foreground_color: (.06,.45,.45,1)
                            background_normal : ''
                            font_name: 'Roboto-Bold'
                            size_hint_y: None
                            height: 130
                        Label:
                            size_hint_y: None
                            height: 50
                        TextInput:
                            hint_text: 'enter voucherID of transaction'
                            # foreground_color: (.06,.45,.45,1)
                            font_name: 'Roboto-Bold'
                            font_size: 12
                            size_hint_y: None
                            height: 40
                            size_hint_x:.4
                            multiline: False
                        BoxLayout:
                            size_hint_y: None
                            height: 40
                            spacing:20
                            Button:
                                text: 'create graph'
                                bold: True
                                size_hint_x: .3
                                background_color: (.06,.47,.47,1)
                                background_normal : ''
                                on_release: root.create_graph()

                            Label:
                                size_hint_x: .7
                        Label:



                Screen:
                    id: scrn_analysis
                    name: 'scrn_CRUD'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            spacing: 10
                            size_hint_y: None
                            height: 30
                            TextInput:
                                id: voucherID
                                hint_text: 'voucherID'
                                multiline: False
                                size_hint_x: .12
                                focus: True
                                on_text_validate: date.select_all()
                                on_text_validate: date.focus= True
                                text: '5555'
                            TextInput:
                                id: date
                                hint_text: 'date'
                                multiline: False
                                size_hint_x: .2
                                on_text_validate: time.select_all()
                                on_text_validate: time.focus= True
                                text: '1400-01-01'
                            TextInput:
                                id: time
                                hint_text: 'time'
                                multiline: False
                                size_hint_x: .2
                                on_text_validate: amount.select_all()
                                on_text_validate: amount.focus= True
                                text: '010101'
                            TextInput:
                                id: amount
                                hint_text: 'amount'
                                multiline: False
                                size_hint_x: .12
                                on_text_validate: Source_Deposit.select_all()
                                on_text_validate: Source_Deposit.focus= True
                                text: '1000'
                            TextInput:
                                id: Source_Deposit
                                hint_text: 'Source Deposit'
                                multiline: False
                                size_hint_x: .12
                                on_text_validate: Destination_Deposit.select_all()
                                on_text_validate: Destination_Deposit.focus= True
                                text: ''
                            TextInput:
                                id: Destination_Deposit
                                hint_text: 'Destination Deposit'
                                multiline: False
                                size_hint_x: .12
                                on_text_validate: Branch_ID.select_all()
                                on_text_validate: Branch_ID.focus= True
                                text: '14'
                            TextInput:
                                id: Branch_ID
                                hint_text: 'Branch ID'
                                multiline: False
                                size_hint_x: .12
                                on_text_validate: root.insert_data()
                                text: ''

                        Button:
                            text: 'insert data in transaction table'
                            background_normal: ''
                            background_color: (.06,.47,.47,1)
                            size_hint_y: None
                            height: 40
                            on_release: root.insert_data()
                            size_hint_x: .4
                            pos_hint: {'center_x': .5}
                        Label:
                            id: error_message
                            text: ''
                            markup: True
                            size_hint_y:None
                            height: 20

                        Label:
                            size_hint_y:.1

                        TextInput:
                            id:voucherID_delete
                            hint_text: 'voucherID'
                            size_hint_y: None
                            height: 30
                            size_hint_x: .3
                            pos_hint: {'center_x': .5}
                            on_text_validate: root.delete_data()

                        Button:
                            text: 'delete data from transaction table'
                            background_normal: ''
                            background_color: (.06,.47,.47,1)
                            size_hint_y: None
                            height: 40
                            on_release: root.delete_data()
                            size_hint_x: .4
                            pos_hint: {'center_x': .5}

                        Label:
                            id: error_message_delete
                            text: ''
                            markup: True
                            size_hint_y:None
                            height: 20

                        Label:
