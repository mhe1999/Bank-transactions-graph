<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<SpinnerOption>:
    # size_hint: None, None
    # size: 20, 20
    spacing: 10
    background_color: (.06,.60,.60,1)
    background_normal: ''


<AdminWindow>:
    file_trigger: file_trigger.__self__
    file_dropdown: file_dropdown.__self__

    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            id: file_trigger
            text: 'File'
            on_release: file_dropdown.open(self)
            size_hint_x: .1
            # background_color: (.06,.47,.47,1)
            # background_normal: ''
            height: 30

            Widget:
                on_parent: file_dropdown.dismiss()

                DropDown:
                    id: file_dropdown
                    Button:
                        id:close
                        text: 'quit'
                        size_hint_y: None
                        height: 30
        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint_x: .9

    BoxLayout:
        id: content_nav
        BoxLayout:
            id: nav_tabs
            orientation: 'vertical'
            size_hint_x: .2
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06,.40,.40,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            ToggleButton:
                id:user_toggle
                size_hint_y: .1
                text: 'customers INFO'
                state: 'down'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            ToggleButton:
                id:product_toggle
                size_hint_y: .1
                text: 'Manage Products'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: analysys_toggle
                size_hint_y: .1
                text: 'Product Analysys'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            Label:
                id: sp
                size_hint_y: .7

        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20,10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_content
                    name: 'scrn_content'
                    BoxLayout:
                        spacing: 20
                        orientation: 'vertical'
                        id: Bscrn_content
                        Spinner:
                            id: whatever
                            text: "Choose a table"                   #default value showed
                            values: ["Customer table","transactions","Deposits", "Deposits type", "Deposits status", "Branchs"]
                            size_hint_y: None
                            height: 30
                            background_color: (.06,.47,.47,1)
                            background_normal: ''
                            on_text: root.on_spinner_select(self.text)
                        Label:
                            # markup: True
                        # Button:
                        #     text: 'hi'
                        #     size_hint_y: None
                        #     height: 30
                Screen:
                    id: scrn_product_content
                    name: 'scrn_product_content'


                Screen:
                    id: scrn_analysis
                    name: 'scrn_analysis'
